MOV 40H, #21H
MOV 41H, #0FFH
MOV 42H, #43H
MOV 43H, #0FFH
MOV 44H, #65H
MOV 45H, #0FFH
MOV 46H, #87H

MOV R0, #40H
MOV R1, #40H      
SCAN:MOV A, @R0
    INC R0
    CJNE A, #0FFH, COPY
    SJMP NEXT

COPY:MOV @R1, A
    INC R1

NEXT:CJNE R0, #60H, SCAN

FILL: MOV A, #00H
    MOV @R1, A
    INC R1
    CJNE R1, #60H, FILL